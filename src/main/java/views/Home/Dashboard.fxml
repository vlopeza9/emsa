         </image>
      </ImageView>
      <Label fx:id="user" text="Nombre del Usuario" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
         <GridPane.margin>
            <Insets bottom="200.0" />
         </GridPane.margin>
         <font>
            <Font name="Freestyle Script" size="35.0" />
         </font>
      </Label>
      <Button fx:id="logout" mnemonicParsing="false" styleClass="button-primary" text="Cerrar Sesion" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
